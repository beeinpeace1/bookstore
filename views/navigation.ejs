<header>
	<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
		<a class="navbar-brand" href="<%= path == 'admin' ? '/admin/listbooks': '/'%>">Books Store</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse"
		 aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<% if(path == 'admin') {%>
			<style>
				.navbar {
					background: #e3003d !important;
				}
			</style>
			<%}%>
				<div class="collapse navbar-collapse" id="navbarCollapse">
					<ul class="navbar-nav mr-auto">
						<%if(!user && path != 'admin' && path != 'intermediate' && path != 'verify'){%>
							<li class="nav-item <%= path == 'login' ? 'active': '' %>">
								<a class="nav-link" href="/login">Sign in</a>
							</li>
							<li class="nav-item <%= path == 'signup' ? 'active': '' %>">
								<a class="nav-link" href="/signup">Sign up</a>
							</li>
							<%}else if(path != 'admin' && path != 'intermediate' && path != 'verify'){%>
								<li class="nav-item <%= path == 'home' ? 'active': '' %>">
									<a class="nav-link" href="/">Books</a>
								</li>
								<li class="nav-item <%= path == 'cart' ? 'active': '' %>">
									<a class="text-white nav-link" href="/cart">
										<span class="fa fa-shopping-cart"></span>
										<span id="cart-total" class="badge bg-light text-dark mx-2">
											<%=cart_total%>
										</span>
									</a>
								</li>
								<%}%>
					</ul>
					<%if(user){%>
						<ul class="navbar-nav navbar-right">
							<li class="nav-item">
								<a class="nav-link" href="/logout">Sign out</a>
							</li>
						</ul>
					<%}%>
					<%if(path == 'admin' && locals.isAdmin){%>
						<ul class="navbar-nav navbar-right pr-5">
							<li class="nav-item">
								<a class="btn btn-light text-dark" href="/admin/add">Add New Book</a>
							</li>
						</ul>
						<ul class="navbar-nav navbar-right">
							<li class="nav-item">
								<a class="nav-link text-white" href="/admin/logout">Logout</a>
							</li>
						</ul>
					<%}%>				
				</div>
	</nav>
</header>