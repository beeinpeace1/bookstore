<!DOCTYPE html>
<html>
<% include ../partials/head %>

  <body>
    <% include ../navigation %>
      <div class="album py-5">
        <div class="container">
          <div class="row">
            <% if(books.length > 0) {for(var i=0; i<books.length; i++) {%>
              <div class="col-md-3">
                <div class="card mb-4 box-shadow">
                  <a href="/admin/edit/<%=books[i].id%>">
                    <img class="card-img-top" src="<%= books[i].image_path%>" alt="Card image cap">
                  </a>
                  <div class="card-body">
                    <h5 class="card-title">
                      Title: <%= books[i].title%>
                    </h5>
                    <p class="card-text">
                      Desc: <%= books[i].desc%></br>
                      Author: <%= books[i].author%></br>
                      ISBN: <%= books[i].isbn%></br>
                      Edition: <%= books[i].edition%></br>
                      Category: <%= books[i].category%>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group" id="link-holder">
                        <a href="/admin/edit/<%=books[i].id%>">
                          <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                        </a>
                        <form method="post" action="/admin/delete">
                          <input type="submit" class="btn btn-sm btn-outline-secondary" value="Delete"></input>
                          <input type="hidden" name="bookid" value="<%=books[i].id%>">
                        </form>
                      </div>
                      
                      <small class="text-muted"><i class="fas fa-eye"></i> <%= books[i].no_of_views%></small>
                      <small class="text-muted">$<%= books[i].price%></small>
                    </div>
                  </div>
                </div>
              </div>
              <% } } else { %>
                <div class="col-md-12">
                <div class="text-center mx-auto">
                    <h1> No books available! </h1>
                </div></div>
                <% } %>
          </div>
        </div>
      </div>
      <% include ../partials/script_includes %>
  </body>

</html>