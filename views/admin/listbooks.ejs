<!DOCTYPE html>
<html>
<% include ../partials/head %>

  <body>
    <% include ../navigation %>
      <div class="album">
        <div class="container">
          <% 
            var prc = viv = asc = dsc = '';
            asc = (locals.order && order == '0') ? 'selected': '';
            dsc = (locals.order && order == '1') ? 'selected': '';
            prc =( locals.kind && kind == 'price') ? 'selected': '';
            viv =( locals.kind && kind == 'no_of_views') ? 'selected': '';
          %>
          <div class="ml-auto">
            <form action="/admin/order/" method="POST">
            <select class="sorters" name="kind" id="kind" onchange="this.form.submit()">
              <option value="price" <%=prc%>>price</option>
              <option value="views" <%=viv%>>views</option>
            </select>
            <select class="sorters" name="order" id="order" onchange="this.form.submit()">
              <option value=0 <%=asc%>>Ascending</option>
              <option value=1 <%=dsc%>> Descending</option>
            </select>
          </form>
          </div>
          <div class="row">
            <% if(books.length > 0) {for(var i=0; i<books.length; i++) {%>
              <div class="col-md-3">
                <div class="card mb-4 box-shadow">
                  <a href="/admin/edit/<%=books[i].id%>">
                    <img class="card-img-top" src="<%= books[i].image_path%>" alt="Card image cap">
                  </a>
                  <div class="card-body">
                    <h5 class="card-title">
                      Title:
                      <%= books[i].title%>
                    </h5>
                    <p class="card-text">
                      Desc:
                      <%= books[i].desc%>
                        </br>
                        Author:
                        <%= books[i].author%>
                          </br>
                          ISBN:
                          <%= books[i].isbn%>
                            </br>
                            Edition:
                            <%= books[i].edition%>
                              </br>
                              Category:
                              <%= books[i].category%>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group" id="link-holder">
                        <a href="/admin/edit/<%=books[i].id%>">
                          <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                        </a>
                        <form method="post" action="/admin/delete">
                          <input type="submit" class="btn btn-sm btn-outline-secondary" value="Delete"></input>
                          <input type="hidden" name="bookid" value="<%=books[i].id%>">
                        </form>
                      </div>

                      <small class="text-muted">
                        <i class="fas fa-eye"></i>
                        <%= books[i].no_of_views%>
                      </small>
                      <small class="text-muted">$
                        <%= books[i].price%>
                      </small>
                    </div>
                  </div>
                </div>
              </div>
              <% } } else { %>
                <div class="col-md-12">
                  <div class="text-center mx-auto">
                    <h1> No books available! </h1>
                  </div>
                </div>
                <% } %>
          </div>
        </div>
      </div>
      <% include ../partials/script_includes %>
  </body>

</html>